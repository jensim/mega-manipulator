query ($cursor: String, $state: MergeRequestState) {
  currentUser {
    authoredMergeRequests(after: $cursor, state: $state) {
      count
      pageInfo {
        hasNextPage
        startCursor
        endCursor
      }
      nodes {
        id
        iid
        state
        webUrl
        title
        author {
          username
          name
        }
        description
        sourceBranch
        targetBranch
        sourceProject {
          id
          path
          fullPath
          group {
            path
          }
          sshUrlToRepo
          httpUrlToRepo
          webUrl
        }
        targetProject {
          id
          path
          fullPath
          group {
            path
          }
          sshUrlToRepo
          httpUrlToRepo
          webUrl
        }
      }
    }
  }
}
